<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        {% block body %}

        <header>
            <nav class="menu">
                <a href="{{ path('home') }}"><img src="{{ asset('assets/img/Motoccaz.png') }}" alt="logo motoccaz"></a>
                <ul class="menuList">
                    <li>
                        <a href="{{ path('home') }}">Accueil</a>
                    </li>
                    <li>
                        <a href="#">Annonce</a>
                    </li>
                    <li>
                        <a href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li>
                        <a href="{{ path('app_register') }}">inscription</a>
                    </li>
                </ul>
            </nav>
        </header>

        {% endblock %}

        {% block main %}

            <main>
                <div class="background_main">
                    <h1>Concept Motoccaz</h1>
                    <br>
                    <p>Motoccaz vous permet de vous aiguiller <br> dans votre recherche de moto</p>
                    <br>
                    <a href="{{ path('app_register') }}" class="btn_main">Inscriver vous</a>
                </div>
            </main>

        {% endblock %}

        {% block footer %}

        <footer>

        </footer>

        {% endblock %}

    </body>
</html>
